@model Compra_de_Entradas.Models.Entradas

@{
    ViewData["Title"] = "Entradas";
}

<h1>Buy a ticket</h1>
<p>What ever you want</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Ticket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fila" class="control-label"></label>
                <input asp-for="Fila" name="Fila" class="form-control" />
                <span asp-validation-for="Fila" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="Id_pelicula" name="Id_pelicula" class="form-control" /> 
                <span asp-validation-for="Id_pelicula" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_usuario" class="control-label"></label>
                <input type="number" asp-for="Id_usuario" name="Id_usuario" class="form-control" />
                <span asp-validation-for="Id_usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Buy Ticket" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Pelis" asp-action="Movies">Back to List</a>
</div>

